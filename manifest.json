{
    "manifest_version": 2,
    "name": "NY Times via AADL",
    "version": "1.1",

    "description": "Redirect links to the NY Times through the Ann Arbor District Library.",

    "page_action": {
        "default_icon": {
            "48": "icons/nytimes-aadl-48.png"
        },
        "show_matches": ["*://www.nytimes.com/*", "*://www-nytimes-com.research.aadl.org/*"]
    },

    "background": {
        "scripts": ["redirect.js"]
    },

    "permissions": ["tabs"]

}